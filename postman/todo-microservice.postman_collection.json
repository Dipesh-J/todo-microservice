    {
      "name": "Todo - Query APIs",
      "item": [
        {
          "name": "Get All Todos",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const json = pm.response.json();",
                  "pm.test('Response has array data', function () {",
                  "  pm.expect(json.data).to.be.an('array');",
                  "});",
                  "pm.test('Response has pagination object', function () {",
                  "  pm.expect(json).to.have.property('pagination');",
                  "  pm.expect(json.pagination).to.have.property('limit');",
                  "  pm.expect(json.pagination).to.have.property('offset');",
                  "  pm.expect(json.pagination).to.have.property('total');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{todo_base_url}}/todos?limit=50&offset=0",
              "host": [
                "{{todo_base_url}}"
              ],
              "path": [
                "todos"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Todos By Last Registered User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const userId = pm.collectionVariables.get('last_registered_user_id');",
                  "if (!userId) {",
                  "  throw new Error('Run Register User (Unique Email) first to set last_registered_user_id.');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const json = pm.response.json();",
                  "pm.test('Response has array data', function () {",
                  "  pm.expect(json.data).to.be.an('array');",
                  "});",
                  "pm.test('Response has pagination object', function () {",
                  "  pm.expect(json).to.have.property('pagination');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{todo_base_url}}/todos/{{last_registered_user_id}}?limit=50&offset=0",
              "host": [
                "{{todo_base_url}}"
              ],
              "path": [
                "todos",
                "{{last_registered_user_id}}"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          },
          "response": []
        },
