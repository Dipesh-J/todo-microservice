    {
      "name": "Auth - Registration",
      "item": [
        {
          "name": "Register User (Unique Email)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const uniqueEmail = `user_${Date.now()}@example.com`;",
                  "pm.collectionVariables.set('generated_email', uniqueEmail);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "const json = pm.response.json();",
                  "pm.test('Response contains created user', function () {",
                  "  pm.expect(json).to.have.property('data');",
                  "  pm.expect(json.data).to.have.property('userId');",
                  "  pm.expect(json.data).to.have.property('email');",
                  "});",
                  "pm.collectionVariables.set('last_registered_email', json.data.email);",
                  "pm.collectionVariables.set('last_registered_user_id', json.data.userId);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{generated_email}}\",\n  \"password\": \"{{register_password}}\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/register",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "register"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Register Same Email Again (Expect 409)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 409', function () {",
                  "  pm.response.to.have.status(409);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{last_registered_email}}\",\n  \"password\": \"{{register_password}}\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/register",
              "host": [
                "{{auth_base_url}}"
              ],
              "path": [
                "register"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Register Invalid Payload (Expect 400)",
          "event": [
            {
